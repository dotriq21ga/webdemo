doctype html
html 
    head
        title profile
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="/css/style.css">
        <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
    body 
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">Logo</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mynavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mynavbar">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Trang chủ</a>
                    </li>
                </ul>
                <form class="d-flex box-account">
                    li 
                        a(class="nav-link fas fa-unlock" href="/users/logout") Đăng xuất
                </form>
                </div>
            </div>
        </nav>
        .container-profile
            table(style="width:100%" )
                tr(class = "text-profile")
                    td Game
                    td Số lượng tài khoản
                    td Thêm Tài Khoản
                    td Ghi chú 
                each option in options
                    tr(class = "text-profile")  
                        td
                            img(src = '/'+option.img , style = 'width:250px ;height:150px')
                        td 
                        td 
                            a(href = '/accounts/add/'+option.slug) Thêm tài khoản game #{option.game}
                        td
                tr(class = "text-profile") 
                    td 
                        a(href = '/option/add') Thêm danh mục game
        .container-profile
            table(style="width:100%" )
                tr(class = "text-profile")
                    td Mã Giao Dịch
                    td Người Chuyển
                    td Người Nhận
                    td Số Tiền
                    td Ghi Chú
                each transaction in transactions
                    tr(class = "text-profile")  
                        td #{transaction._id}
                        td #{transaction.name}
                        td #{transaction.name2}
                        td #{transaction.money}
                        td                
                        
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>